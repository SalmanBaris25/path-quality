<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PathQuality"
             x:Class="PathQuality.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <HorizontalStackLayout Grid.Row="0">
            <Button x:Name="AddSquiggly" Text="Add Path" Clicked="AddSquiggly_Clicked"/>
            <Button x:Name="ApplyScale" Text="Apply Scale" Clicked="AddScale_Clicked"/>
        </HorizontalStackLayout>
        <local:TempView Grid.Row="1" x:Name="TempViewer">
        </local:TempView>
    </Grid>

</ContentPage>
